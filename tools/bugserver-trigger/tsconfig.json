{
  "extends": "@internal/ts-config/tsconfig.base.json",
  "compilerOptions": {
    // "paths": {
    //   "@visactor/vchart": ["../../packages/vchart/src"],
    //   "@visactor/vchart-extension": ["../../packages/vchart-extension/src"]
    // },
    "target": "ES2016",
    "useDefineForClassFields": true,
    "module": "ES2015",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../../packages/vchart"
    },
    {
      "path": "../../packages/vchart-extension"
    }
  ],
  "include": ["src", "scripts"]
}
